{
  "authentication": {
    "type": "jwt"
  },
  "baseUrl": "<%= base_url %>",
  "contexts": [
    "personal"
  ],
  "description": "Add custom links to external services on Service Desk tickets",
  "key": "<%= plugin_key %>",
  "name": "<%= plugin_name %>",
  "scopes": [
    "read",
    "write"
  ],
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "vendor": {
    "name": "Pawel Niewiadomski",
    "url": "https://pawelniewiadomski.com"
  },
  "modules": {
    "generalPages": [
      {
        "key": "service-buttons-project-configuration",
        "location": "atl.jira.proj.config/projectgroup4",
        "name": {
          "value": "Service Buttons"
        },
        "url": "/projects/{project.id}/service_buttons"
      }
    ],
    "webPanels": [
      {
        "key": "service-buttons-panel",
        "url": "/projects/{project.id}/service_buttons?issue_id={issue.id}",
        "location": "atl.jira.view.issue.right.context",
        "weight": 10,
        "name": {
          "value": "Service buttons"
        },
        "conditions": [
          {
            "condition": "user_is_logged_in"
          },
          {
            "condition": "entity_property_equal_to",
            "params": {
              "entity": "project",
              "propertyKey": "<%= project_property_key %>",
              "objectName": "has_service_buttons",
              "value": "true"
            }
          }
        ]
      }
    ]
  }
}